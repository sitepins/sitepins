{{- $.Scratch.Add "index" slice -}}
{{- range where .Site.RegularPages "Section" "products" -}}
{{ $summary := .Summary | truncate 40 }}
  {{- $.Scratch.Add "index" (dict "title" .Title "image" .Params.image "site" .Params.website "tags" .Params.tags "categories" .Params.categories "summary" $summary "contents" .Plain "permalink" .Permalink) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}